{
  "name": "postcss-palettize-colors",
  "version": "1.0.0",
  "description": "PostCSS plugin to replace colors in a stylesheet with colors from a given palette",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "color-palette"
  ],
  "scripts": {
    "test": "jest && eslint .",
	"lint": "eslint .",
    "publish": "clean-publish"
  },
  "author": "Kelly Dwan <ryelle@users.noreply.github.com>",
  "license": "GPL-2.0-or-later",
  "repository": "ryelle/postcss-palettize-colors",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.1.5"
  },
  "dependencies": {
    "postcss-values-parser": "4.0.0",
    "tinycolor2": "1.4.2"
  },
  "devDependencies": {
    "clean-publish": "4.4.0",
    "eslint": "7.18.0",
    "eslint-plugin-jest": "24.1.3",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "postcss": "8.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
